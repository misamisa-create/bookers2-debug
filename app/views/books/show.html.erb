<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user: @show_book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <!--メイン-->
    <div class='col-md-8 offset-md-1'>
      <!--本詳細-->

          <h2>Book detail</h2>
          <table class='table'>
            <tr>
              <td><%= link_to user_path(@show_book.user) do %>
                <%= attachment_image_tag(@show_book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
                <%= @show_book.user.name %>
                <% end %>
              </td>
              <td><%= link_to @show_book.title, book_path(@show_book) %></td>
              <td><%= @show_book.body %></td>
              <% if @show_book.user == current_user %>
                <td><%= link_to 'Edit', edit_book_path(@show_book), class: "btn btn-sm btn-success edit_book_#{@show_book.id}" %></td>
                <td><%= link_to 'Destroy', book_path(@show_book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@show_book.id}"%></td>
                <!--いいね機能-->
                <td>
                  <!--もし投稿画像のいいねに自分が含まれる場合-->
                  <% if @show_book.favorited_by?(current_user) %>
                    <p>
                      <!--❤を️deleteすることができる-->
                      <%= link_to book_favorites_path(@show_book.id), method: :delete do %>
                        ♥<%= @show_book.favorites.count %> いいね
                      <% end %>
                    </p>
                  <% else %>
                    <p>
                      <!--❤️にcreateすることができる-->
                      <%= link_to book_favorites_path(@show_book.id), method: :post do %>
                        ♡<%= @show_book.favorites.count %> いいね
                      <% end %>
                    </p>
                  <% end %>
                </td>
                <td>コメント数：<%= @show_book.book_comments.count %></td>
              <% end %>
            </tr>
          </table>

        <!--コメント-->
          <table>
          <!--bootstrapの記載に直す-->
          <% @show_book.book_comments.each do |book_comment| %>
            <tr>
              <td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
              <td><%= book_comment.comment %></td>
              <!--削除-->
              <% if book_comment.user == current_user %>
              <td><%= link_to "Destroy",book_book_comment_path(book_comment.book,book_comment),class: 'btn-sm btn-danger',method: :delete %></td>
              <% end %>
            </tr>
          <% end %>
          </table>
            <!--新規投稿欄-->
          <%= form_with(model:[@show_book,@book_comment],local:true) do |f| %>
            <%= f.text_area :comment, size:"90x5" %><br>
            <%= f.submit "送信" %>
          <% end %>


    </div>
  </div>
</div>


