<!--サイドバー　ユーザー情報-->
<table class='table'>

  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to "#{user.followings.count}",followings_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to "#{user.followers.count}",followers_path(user) %></th>
  </tr>
  <tr>
    <th><%= render 'relationships/follow_button',user:user %></th>
    <th>
      <% if current_user != user %>
        <%= link_to 'chatを始める',chat_path(user.id) %>
      <% end %>
    </th>
  </tr>
</table>


<div class='row'>
    <%= link_to '',edit_user_path(user.id),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>